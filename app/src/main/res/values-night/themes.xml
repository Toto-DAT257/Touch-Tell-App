    <style name="Theme.TTApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Touch_and_tell_blue</item>
        <item name="colorPrimaryVariant">@color/Touch_and_tell_blue_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- App window. -->
        <item name="android:statusBarColor">@color/toto_background_gradient_blue</item>
        <item name="android:navigationBarColor">@color/toto_background_gradient_purple</item>
    </style>
</resources>