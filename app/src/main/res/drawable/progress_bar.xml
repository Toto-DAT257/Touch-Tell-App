<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="999dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>

    <item android:id="@android:id/progress"
        android:top="3dp"
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp">

        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="999dp"/>
                <gradient
                    android:startColor="@color/toto_progress_gradient_start"
                    android:endColor="@color/toto_progress_gradient_end"
                    android:centerColor="@color/toto_progress_gradient_center"
                    android:centerY="0.24"
                    android:type="linear"
                    android:angle="270" />
            </shape>
        </scale>
    </item>
</layer-list>